<div class="form-position">
  <%= form_with(model: delivery_type, local: true, class: "was-validated") do |form| %>
      <%= render partial: 'layouts/form_errors',locals: {object: delivery_type} %>

<div class="input-container">
  <div class="row input-group">
    <div class="input-position form-group">
      <%= form.label :name, class: "form-label"%>
      <%= form.text_field :name, class: "form-control", placeholder: " Delivery type Name..." %>
    </div>
  </div>
  <div class="row input-group">
    <div class="input-position form-group custom-control custom-checkbox">
      <%= form.check_box :requires_delivery, class: "custom-control-input"%>
      <%= form.label :requires_delivery, class: "custom-control-label"%>
    </div>
  </div>
</div>

<br>

<div class="container d-flex justify-content-center">
  <div class="btn-group">
    <%= form.submit name: t('.submit'), tabindex: 0 %>
  <% end %>