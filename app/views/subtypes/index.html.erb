<h3>Subtypes of <%=@type.name%></h3>

<div class="table-responsive-fixed">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtypes.each do |subtype| %>
      <tr>
        <td><%= subtype.name %></td>
        <td><%= subtype.created_at %></td>
        <td><%= subtype.updated_at %></td>
        <td><%= subtype.deleted %></td>
        <td><%= link_to [@type,subtype] do%>
           <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_type_subtype_path(@type,subtype) do%>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to [@type,subtype], method: :delete, data: { confirm: 'Are you sure?' } , class: "deleteBtn" do%>
            <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="btn-group">
<%= link_to new_type_subtype_path(@type) do%>
<i class="fa fa-plus" aria-hidden="true"> Subtype</i>
<%end%>
<%= link_to types_path do%>
<i class="fas fa-undo"> Types</i>
<%end%>
</div>  