<h3>Subtypes of <%=@type.name%></h3>

<div class="table-responsive">
<table>
  <thead>
    <tr>
      <th><%=Subtype.human_attribute_name(:name)%></th>
      <th><%=Subtype.human_attribute_name(:created_at)%></th>
      <th><%=Subtype.human_attribute_name(:updated_at)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtypes.each do |subtype| %>
      <tr>
        <td class="tText"><%= subtype.name %></td>
        <td class="tText"><%= l subtype.created_at %></td>
        <td class="tText"><%= l subtype.updated_at %></td>
        <td class="buttonsPrim"><%= link_to [@type,subtype], class: "tButton" do%>
           <i class="fas fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td class="buttonsPrim"><%= link_to edit_type_subtype_path(@type,subtype), class: "tButton" do%>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td class="buttonsDel"><%= link_to [@type,subtype], method: :delete, data: { confirm: 'Are you sure?' } , class: "tButton" do%>
            <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<div class="btn-group">
<%= link_to new_type_subtype_path(@type) do%>
<i class="fa fa-plus" aria-hidden="true"> Subtype</i>
<%end%>
<%= link_to types_path do%>
<i class="fas fa-undo"> Types</i>
<%end%>
</div>  