<h3>Subtypes of <%=@type.name%></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Deleted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subtypes.each do |subtype| %>
      <tr>
        <td><%= subtype.name %></td>
        <td><%= subtype.created_at %></td>
        <td><%= subtype.updated_at %></td>
        <td><%= subtype.deleted %></td>
        <td><%= link_to 'Show', [@type,subtype] %></td>
        <td><%= link_to 'Edit', edit_type_subtype_path(@type,subtype) %></td>
        <td><%= link_to 'Destroy', [@type,subtype], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div class="btn-group">
<%= link_to 'New Subtype', new_type_subtype_path(@type) %>
<%= link_to 'Back to Types', types_path %>
</div>  