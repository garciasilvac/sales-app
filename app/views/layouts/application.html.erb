<!DOCTYPE html>
<html>
  <head>
    <title>Pbutter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">
  </head>

  <body>

    <div id="minFullBrowserContainer">
      <div id="overflowContainer">

        <% if user_signed_in? %>
          <%= render 'layouts/application_devise_alerts' %>
          <%= render 'layouts/application_alert_modal' %>
        
      	  <div id="welcomeBanner">PYME VENTA PB</div>

          <%= render 'layouts/application_navbar' %>
        
        
      	<div id="subBody">
       	 	<%= yield %>
       	</div>
        <% else %>
        <%= yield %>
        <% end %>
      </div>
    </div>

    <%= render 'layouts/application_footer' %>

  </body>
</html>
