<!DOCTYPE html>
<html>
  <head>
    <title>Pbutter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= javascript_include_tag 'https://maps.googleapis.com/maps/api/js?v=weekly&key='+Rails.application.credentials[Rails.env.to_sym][:gmapsapi][:key]%>
    <%= javascript_include_tag "https://www.gstatic.com/charts/loader.js" %>
    
    <%= javascript_pack_tag 'application' %>
    <%= stylesheet_link_tag 'application', media: 'all' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <%= yield(:head_tags) %>
  </head>

  <body>
    <%= render 'layouts/application_alert_modal' %>
    <% if user_signed_in? %>
    <div id="minFullBrowserContainer">
      <div id="overflowContainer">
        <%= render 'layouts/application_navbar' %>
      	<div id="subBody">
       	 	<%= yield %>
       	</div>
      </div>
    </div>
    <%= render 'layouts/application_footer' %>
    
    <% else %>
    <div id="minFullBrowserContainerLogin">
      <div id="overflowContainerLogin">
        <div id="subBody">
          <%= yield %>
        </div>
      </div>
    </div>
    <% end %>
    

  </body>
</html>
