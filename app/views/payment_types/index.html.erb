
<h3>Payment Types</h3>

<div class="table-responsive-fixed">
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_types.each do |payment_type| %>
      <tr>
        <td><%= payment_type.name %></td>
        <td><%= link_to payment_type do%>
            <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_payment_type_path(payment_type) do%>
           <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to payment_type, method: :delete, data: { confirm: 'Are you sure?' } , class: "deleteBtn" do%>
             <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></div>

<%= link_to new_payment_type_path %>
<i class="fa fa-plus" aria-hidden="true"> Payment Type</i>
      <% end %>