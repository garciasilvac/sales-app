<h3>Payment Types</h3>

<div class="table-responsive">
<table>
  <thead>
    <tr>
      <th><%=PaymentType.human_attribute_name(:name)%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @payment_types.each do |payment_type| %>
      <tr>
        <td class="tText"><%= payment_type.name %></td>
        <td class="buttonsPrim"><%= link_to payment_type, class: "tButton" do%>
            <i class="fas fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td class="buttonsPrim"><%= link_to edit_payment_type_path(payment_type), class: "tButton" do%>
           <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td class="buttonsDel"><%= link_to payment_type, method: :delete, data: { confirm: 'Are you sure?' } , class: "tButton" do%>
             <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table></div>

<%= link_to new_payment_type_path do%>
<i class="fa fa-plus" aria-hidden="true"></i> Payment Type
<% end %>