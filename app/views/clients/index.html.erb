<h3><i class="fas fa-user-friends"> <%=t('.title', count: Client.count)%></i></h3><div id="clientsTopMenu" class="d-flex flex-row mb-2 w-100">    <%= link_to new_client_path do%>      <i class="fa fa-plus" aria-hidden="true"> <%=Client.model_name.human%></i>    <% end %>  <!--%= form_tag(clients_path(format: 'js'), class: "form-inline col-sm-6", method: "get", remote: true) do %-->    <%= simple_form_for :search, url: clients_path, html: {class: "d-flex flex-row form-inline col-10"}, method: "GET", remote: true do |form| %>    <div class="input-group w-100">      <%= form.input :search_word, input_html:{class: "form-control w-100"}, placeholder: "Enter search term...", label: false %>      <div class="input-group-append">        <%= button_tag(type: "submit", class: "searchSubmit", data: {toggle: "tooltip"}, title: "Search!") do%>          <i class="fas fa-search"></i>        <% end %>        <%= link_to clients_path, class: "searchSubmit btn-outline-danger", data: {toggle: "tooltip"}, title: "Clear Search" do%>        <i class="fas fa-times"></i>        <% end %>      </div>    </div>  <% end %></div><div id="clientsTableDiv" class="table-responsive"><table id="clientsTable">  <thead>    <tr>      <th><%=Client.human_attribute_name("full_name")%></th>      <th colspan="2"><%=Client.human_attribute_name("phone_number")%></th>      <th><%=Client.human_attribute_name("email")%></th>      <th><%=Client.human_attribute_name("created_at")%></th>      <th><%=Client.human_attribute_name("updated_at")%></th>      <th colspan="4"></th>    </tr>  </thead>  <tbody id="clientsTableBody">    <% if @clients.empty? %>      <tr>        <td colspan="14"> No clients yet :) </td>      </tr>    <% else %>    <% @clients.each do |client| %>      <tr>      	<td><%= client.formatted_name(:reverse) %></td>      	<td><%= client.phone_countrycode %></td>      	<td><%= client.phone_number %></td>      	<td><%= client.email %></td>      	<td><%= l client.created_at %></td>      	<td><%= l client.updated_at %></td>      	<td class="buttons"><%= link_to client_adresses_path(client) do%>         <i class="fa fa-home" aria-hidden="true"> (<%=client.adresses.count%>)</i>          <% end %>        </td>        <td class="buttons"><%= link_to client_path(client) do%>          <i class="far fa-info-circle" aria-hidden="true"></i>          <% end %>        </td>        <td class="buttons"><%= link_to edit_client_path(client) do%>          <i class="fas fa-pencil-alt"></i>          <% end %>        </td>        <td class="buttons"><%= link_to client, method: :delete, data: { confirm: t('.del_confirm', user: client.formatted_name(:full)) } , class: "deleteBtn" do%>              <i class="far fa-trash-alt"></i>            <% end %>        </td>      </tr>    <% end %>    <% end %>  </tbody></table></div><div id="clientsSearchResult">  </div><%= link_to new_client_path do%>      <i class="fa fa-plus" aria-hidden="true"> <%=Client.model_name.human%></i>      <% end %>