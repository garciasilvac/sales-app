<h3>Items for this sale</h3>

<table>
  <thead>
    <tr>
      <th>Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <tr>
        <td><%= @sale.products.find(shopping_cart.product_id).name %></td>
        <td><%= @sale.products.find(shopping_cart.product_id).price %></td>
        <td><%= shopping_cart.product_q %></td>
        <td><%= shopping_cart.subtotal %></td>
        <td><%= link_to 'Show', [@sale,shopping_cart] %></td>
        <td><%= link_to 'Edit', edit_sale_shopping_cart_path(@sale,shopping_cart) %></td>
        <td><%= link_to 'Destroy', [@sale,shopping_cart], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
    <tr>
      <th colspan="2"></th>
      <th><b>Total Amount<b></th>
      <th><b><%= @sale.total_amount %><b></th>
      <th colspan="3"></th>
    </tr>
  </tbody>
</table>


<br>
<div class="btn-group">
<%= link_to 'New Item', new_sale_shopping_cart_path %>
<%= link_to 'Back to Sales', sales_path %>
</div>
