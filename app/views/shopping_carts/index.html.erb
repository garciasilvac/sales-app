<div class="row d-flex align-items-center mb-3">
  <div class="col-3 block"><h3>Items for <%= @sale.client.formatted_name(:full) %></h3> <span class="font-italic font-weight-light"><%= l @sale.sale_datetime %></span> </div>
</div>

<div class="table-responsive-fixed">
<table>
  <thead>
    <tr>
      <th colspan="2">Product</th>
      <th>Unit Price</th>
      <th>Quantity</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @shopping_carts.each do |shopping_cart| %>
      <tr>
        <td class="d-flex justify-content-center">
           <% if @sale.products.find(shopping_cart.product_id).product_image.attached? %>
              <%= image_tag(@sale.products.find(shopping_cart.product_id).product_image, class: "product-img product-img-sm")%>
            <% else %>
              <%= image_tag("default_product_image.jpg", class: "product-img product-img-sm") %>
            <% end %>
        </td>
        <td><%= @sale.products.find(shopping_cart.product_id).name %></td>
        <td><%= number_to_currency(@sale.products.find(shopping_cart.product_id).price) %></td>
        <td><%= t shopping_cart.product_q %></td>
        <td><%= number_to_currency(shopping_cart.subtotal) %></td>
        <td><%= link_to [@sale,shopping_cart] do%>
           <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_sale_shopping_cart_path(@sale,shopping_cart) do%>
           <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to [@sale,shopping_cart], method: :delete, data: { confirm: 'Are you sure?' } , class: "deleteBtn" do%>
             <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
    <tr>
      <th colspan="3"></th>
      <th><b>Total Amount<b></th>
      <th><b><%= number_to_currency(@sale.total_amount) %><b></th>
      <th colspan="3"></th>
    </tr>
  </tbody>
</table>
</div>


<div class="btn-group">
  <%= link_to new_sale_shopping_cart_path do%>
    <i class="fa fa-plus" aria-hidden="true"> Item</i>
  <% end %>
  <%= link_to sales_path do%>
    <i class="fas fa-undo"> Sales</i>
  <% end %>
</div>

<%= link_to edit_step_2_sale_path(@sale) do%>
    <i class="fas fa-forward"> Continue</i>
<% end %>
