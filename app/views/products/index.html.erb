<h3><i class="fas fa-cubes"> Products (<%=Product.count%>)</i></h3>

<div class="table-responsive-fixed">
<table>
  <thead>
    <tr>
      <th>IMAGE</th>
      <th>Name</th>
      <th>Type</th>
      <th>Subtype</th>
      <th>Price</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td class="d-flex justify-content-center">
          <% if product.product_image.attached? %>
            <%= image_tag(product.product_image , height: '50', width: '50')%>
          <% else %>
            <%= image_tag("default_product_image.jpg", height: '50', width: '50') %>
          <% end %> 
        </td>
        <td><%= product.name %></td>
        <td><%= product.subtype.type.name %></td>
        <td><%= product.subtype.name %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= l product.created_at %></td>
        <td><%= l product.updated_at %></td>
        <td><%= link_to product do%>
         <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_product_path(product) do%>
         <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } , class: "deleteBtn" do%>
             <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to new_product_path do %>
<i class="fa fa-plus" aria-hidden="true"> Product</i>
          <% end %>