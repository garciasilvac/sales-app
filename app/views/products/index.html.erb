<h3><i class="fas fa-cubes"> Products (<%=Product.count%>)</i></h3>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Subtype</th>
      <th>Price</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.subtype.type.name %></td>
        <td><%= product.subtype.name %></td>
        <td><%= product.price %></td>
        <td><%= product.created_at %></td>
        <td><%= product.updated_at %></td>
        <td><%= link_to product do%>
          <i class="fa fa-eye" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_product_path(product) do%>
          <i class="fa fa-cog" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to product, method: :delete, data: { confirm: 'Are you sure?' } , class: "deleteBtn" do%>
          <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to new_product_path do %>
<i class="fa fa-plus" aria-hidden="true"> Product</i>
          <% end %>