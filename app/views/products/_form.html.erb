<div class="form-position">
    <%= form_with(model: product, local: true, class: "was-validated") do |form| %>
    <%= render partial: 'layouts/form_errors',locals: {object: product} %>

  <div class="input-container">
    <div class="row input-group">
      <div class="input-position form-group">
        <%= form.label :name, class: "form-label"%>
        <%= form.text_field :name, class: "form-control", placeholder: "Product name...", required: true %>
      </div>
    </div>
    <div class="row input-group">
      <div class="input-position form-group">
        <%= form.label :subtype_id, class: "form-label"%>
        <%= form.collection_select(:subtype_id, Subtype.all.sort_by {|st| [st.type.name, st.name]}, :id, :full_subtype, {:include_blank => 'Subtype...'}, {:class => 'custom-select'})  %>
      </div>
    </div>
    <div class="row input-group">
      <div class="input-position form-group">
        <%= form.label :price, class: "form-label"%>
        <%= form.number_field :price, class: "form-control", placeholder: "Price", pattern:"[0-9]*", inputmode: "numeric"%>
      </div>
    </div>
    <div class="row input-group">
      <div class="input-position form-group custom-file">
        <%= form.file_field :product_image, class: "custom-file-input" %>
        <%= form.label :product_image, class: "custom-file-label"%>
      </div>
    </div>
  </div>

    <br>

    <div class="container d-flex justify-content-center">
      <div class="btn-group">
        <%= form.submit name: t('.submit'), tabindex: 0 %>
    <% end %>
