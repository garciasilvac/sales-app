<div class="form-position">
  <%= form_with(model: [@sale,delivery], local: true, url: update_step_2_sale_delivery_path(
  @sale,delivery), class: "was-validated") do |form| %>
    <%= render partial: 'layouts/form_errors',locals: {object: delivery} %>

      <div class="input-container">
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :real_date, class: "form-label-special d-flex block text-secondary"%>
            <div class="row">
              <%= form.date_select :real_date, {start_year: Date.today.year, end_year: Date.today.year + 1, tabindex: autotab, include_blank: true, default: nil},{class: "custom-select col", required: true}%>
            </div>
          </div>
        </div>
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :real_timeblock, class: "form-label-special d-flex block text-secondary"%>
            <%= form.collection_select(:real_timeblock, Timeblock.order(:name), :id, :name, {:include_blank => 'Time Block..',required: true}, {class: 'custom-select'})  %>
          </div>
        </div>
        <div class="row input-group">
          <div class="input-position form-group custom-control custom-checkbox">
            <%= form.check_box :successful, class: "custom-control-input"%>
            <%= form.label :successful, class: "custom-control-label"%>
          </div>
        </div>

        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :driver_comment, class: "form-label"%>
            <%= form.text_area :driver_comment , class: "form-control", placeholder: "Driver comments..."%>
          </div>
        </div>

         <br>

         <div class="container d-flex justify-content-center">
          <div class="btn-group">
            <%= form.submit name: t('.submit'), tabindex: 0 %>
        <% end %>

