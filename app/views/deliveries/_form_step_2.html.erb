<%= form_with(model: [@sale,delivery], local: true, url: update_step_2_sale_delivery_path(
@sale,delivery)) do |form| %>
  <% if delivery.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(delivery.errors.count, "error") %> prohibited this delivery from being saved:</h2>

      <ul>
        <% delivery.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :real_date %>
    <%= form.date_select :real_date, {include_blank: true, default: nil} %>
  </div>

  <div class="field">
    <%= form.label :real_timeblock %>
    <%= form.collection_select(:real_timeblock, Timeblock.order(:name), :id, :name, {:include_blank => 'Time Block..'}, {:class => 'custom-select'})  %>
  </div>

  <div class="field">
    <div class="custom-control custom-checkbox">
      <%= form.check_box :successful, class: "custom-control-input"%>
      <%= form.label :successful, class: "custom-control-label"%>
    </div>
  </div>

  <div class="field">
    <%= form.label :driver_comment %>
    <%= form.text_area :driver_comment %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
