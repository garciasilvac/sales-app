<div class="form-position">
<%= form_with(model: [@sale,delivery], local: true, class: "was-validated" ) do |form| %>
    <%= render partial: 'layouts/form_errors',locals: {object: delivery} %>

  <div class="input-container">
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :sched_date, class: "form-label-special d-flex block text-secondary"%>
            <%= form.date_select :sched_date, {start_year: Date.today.year, end_year: Date.today.year + 1, tabindex: autotab},{class: "custom-select col", required: true}%>
          </div>
        </div>
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :sched_timeblock, class: "form-label" %>
            <%= form.collection_select(:sched_timeblock, Timeblock.order(:name), :id, :name, {include_blank: 'Time Block..', required: true}, {class: 'custom-select'}) %>
          </div>
        </div>
        <div class="row input-group">
          <div class="input-position form-group custom-control">
            <%= form.check_box :delivered, class: "custom-control-input" %>
            <%= form.label :delivered, class: "custom-control-label" %>
          </div>
        </div>
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :real_date, class: "form-label-special d-flex block text-secondary"%>
            <%= form.date_select :real_date, {start_year: Date.today.year, end_year: Date.today.year + 1, tabindex: autotab, include_blank: true, default: nil},{class: "custom-select col", required: true}%>
          </div>
        </div>

        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :real_timeblock %>
            <%= form.collection_select(:real_timeblock, Timeblock.order(:name), :id, :name, {:include_blank => 'Time Block..',required: true}, {class: 'custom-select'})  %>
          </div>
        </div>
      </div>

        <br>

         <div class="container d-flex justify-content-center">
          <div class="btn-group">
            <%= form.submit name: t('.submit'), tabindex: 0 %>
        <% end %>
