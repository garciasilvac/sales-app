<%= form_with(model: [@client, adress], local: true, class:"needs-validation") do |form| %>
  <% if adress.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(adress.errors.count, "error") %> prohibited this adress from being saved:</h2>

      <ul>
        <% adress.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


<div class="container input-container">
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text"><%=Adress.human_attribute_name("street")%></span>
  </div>
  <%= form.text_field :street, class: "form-control", placeholder: Adress.human_attribute_name("street") , required: true %>
  <%= form.text_field :str_number, class: "form-control", placeholder: Adress.human_attribute_name("str_number"), required: true %>
  <%= form.text_field :adr_unit, class: "form-control", placeholder: Adress.human_attribute_name("adr_unit") %>
</div>
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text"><%=Adress.human_attribute_name("adr_other")%></span>
  </div>
  <%= form.text_field :adr_other, class: "form-control", placeholder: Adress.human_attribute_name("adr_other") %>
</div>
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text"><%=Adress.human_attribute_name("adr_county")%> &amp; <%=Adress.human_attribute_name("adr_zip")%></span>
  </div>
  <%= form.text_field :adr_county, class: "form-control", placeholder: Adress.human_attribute_name("adr_county"), required: true %>
  <%= form.text_field :adr_zip, class: "form-control", placeholder: Adress.human_attribute_name("adr_zip") %>
</div>
<div class="input-group">
  <div class="input-group-prepend">
    <span class="input-group-text"><%=Adress.human_attribute_name("adr_state")%> &amp; <%=Adress.human_attribute_name("adr_country")%></span>
  </div>
  <%= form.text_field :adr_state, class: "form-control", placeholder: Adress.human_attribute_name("adr_state"), required: true %>
  <%= form.text_field :adr_country, class: "form-control", placeholder: Adress.human_attribute_name("adr_country"), required: true %>
</div>
</div>

<br>
<div class="btn-group">
    <%= form.submit name: t('.submit') %>
<% end %>
