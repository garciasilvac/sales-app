<% provide :head_tags do %>
    <script>
    $(document).ready(function(){
      mapDiv = document.getElementById('map');
      initMap(<%=@adress.latitude%>, <%=@adress.longitude%>, mapDiv, '<%=@adress.full_adress%>')
    });      
    </script>
<% end %>

<p>
<div id='map'></div>
</p>
 <%= link_to "Open in Maps", @adress.gmap_show , target: "_blank"%>

 <%= link_to "Directions", @adress.gmap_dir , target: "_blank"%>
<p>
  <strong><%= label(:adress, :street) %></strong>
  <%= @adress.street %>
</p>

