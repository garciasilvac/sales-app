<div class="form-position">
        <%= form_with(model: sale, local: true , url: update_step_3_sale_path(sale), class: "was-validated") do |form| %>
          <%= render partial: 'layouts/form_errors',locals: {object: sale} %>   

    <div class="input-container">
        <div class="row input-group">
          <div class="input-position form-group">
            <%= form.label :payment_type_id, class: "form-label"%>
            <%= form.collection_select(:payment_type_id, PaymentType.all, :id, :name, {:include_blank => 'Payment type...'}, {:class => 'custom-select'})  %>
           </div>
         </div>
    </div>

        <br>

    <div class="container d-flex justify-content-center">
      <div class="btn-group">
            <%= form.submit name: t('.submit'), tabindex: 0 %>
    <% end %>