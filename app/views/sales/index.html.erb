<h3><i class="fas fa-chart-line"> <%=t('.title')%></i></h3>

<div class="table-responsive-fixed">
<table>
  <thead>
    <tr>
      <th><%=Sale.human_attribute_name(:sale_datetime)%></th>
      <th><%=Sale.human_attribute_name(:client_id)%></th>
      <th><%=Sale.human_attribute_name(:total_amount)%></th>
      <th><%=Sale.human_attribute_name(:delivery_type_id)%></th>
      <th><%=Sale.human_attribute_name(:paid)%></th>
      <th><%=Sale.human_attribute_name(:payment_type_id)%></th>
      <th><%=Sale.human_attribute_name(:created_at)%></th>
      <th><%=Sale.human_attribute_name(:updated_at)%></th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% if @sales.empty? %>
      <tr>
        <td colspan="13"> No sales yet :) </td>
      </tr>
    <% else %>
    <% @sales.each do |sale| %>
      <tr>
        <td><%= l sale.sale_datetime%></td>
        <td><%= sale.client.full_name %></td>
        <td><%= number_to_currency(sale.total_amount) %></td>
        <td><%= sale.delivery_type_id.nil? ? sale.delivery_type_id : DeliveryType.find(sale.delivery_type_id).name %></td>
        <td class="text-center"><% if sale.paid %>
          <i class="fas fa-check-circle fa-2x" style="color:DarkGreen"></i>
          <% else %>
          <i class="fas fa-times-circle fa-2x" style="color:Tomato"></i>
          <% end %>
        </td>
        <td><%= sale.payment_type_id.nil? ? sale.payment_type_id : PaymentType.find(sale.payment_type_id).name %></td>
        <td><%= l sale.created_at %></td>
        <td><%= l sale.updated_at %></td>
        <td><%= link_to sale_shopping_carts_path(sale) do%>
          <i class="fas fa-cart-plus"> (<%=sale.shopping_carts.count%>)</i>
          <% end %>
        </td>
        <td><%= link_to sale_deliveries_path(sale) do%>
          <i class="fas fa-truck"> (<%=sale.deliveries.count%>)</i>
          <% end %>
        </td>
        <td><%= link_to sale do %>
          <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td><%= link_to edit_sale_path(sale) do%>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td><%= link_to sale, method: :delete, data: { confirm: t('.del_confirm') }, class: "deleteBtn" do%>
          <i class="far fa-trash-alt"></i>
          <% end %>
        </td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>
</div>

<%= link_to new_sale_path do %>
<i class="fas fa-plus"> <%=Sale.model_name.human%></i>
<% end %>
