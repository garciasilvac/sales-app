<h3><i class="fas fa-user-friends"> <%=t('.title')%></i></h3>

<div class="table-responsive">
<table>
  <thead>
    <tr>
      <th><%=Timeblock.human_attribute_name("name")%></th>
      <th><%=Timeblock.human_attribute_name("start_time")%></th>
      <th><%=Timeblock.human_attribute_name("end_time")%></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @timeblocks.each do |timeblock| %>
      <tr>
        <td><%= timeblock.name %></td>
        <td><%= l timeblock.start_time, format: :only_time  %></td>
        <td><%= l timeblock.end_time, format: :only_time %></td>
        <td class="buttons"><%= link_to timeblock do %>
          <i class="far fa-info-circle" aria-hidden="true"></i>
          <% end %>
        </td>
        <td class="buttons"><%= link_to edit_timeblock_path(timeblock) do%>
          <i class="fas fa-pencil-alt"></i>
          <% end %>
        </td>
        <td class="buttons"><%= link_to timeblock, method: :delete, data: { confirm: 'Are you sure?' }, class: "deleteBtn" do %>
              <i class="far fa-trash-alt"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Timeblock', new_timeblock_path %>
